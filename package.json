{
  "name": "msgstats",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.13.0 <25"
  },
  "packageManager": "npm@11.8.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "wrangler dev --config wrangler.api.toml",
    "dev:web": "react-router dev",
    "build": "react-router build",
    "preview": "react-router preview",
    "deploy:web": "npm run verify && react-router build && wrangler deploy --config wrangler.web.toml",
    "deploy:api": "npm run verify && wrangler deploy --config wrangler.api.toml",
    "db:migrations:local": "wrangler d1 migrations apply msgstats-db --local --config wrangler.api.toml",
    "db:migrations:remote": "wrangler d1 migrations apply msgstats-db --remote --config wrangler.api.toml",
    "fmt:check": "npm run format",
    "check:migration-edits": "node scripts/check-migration-edits.mjs",
    "check:remote-migrations": "node scripts/check-remote-migrations.mjs",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --check .",
    "format:write": "prettier \"**/*.{ts,js,json,md,mjs}\" --write",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "verify": "npm run lint && npm run format && npm run typecheck && npm run test",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@react-router/cloudflare": "^7.0.0",
    "@react-router/node": "^7.0.0",
    "@stylexjs/stylex": "^0.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.0.0",
    "react-router-dom": "^7.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240320.0",
    "@react-router/dev": "^7.0.0",
    "@stylexjs/unplugin": "^0.17.5",
    "@types/node": "20.11.30",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.34.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "prettier": "3.2.5",
    "typescript": "5.3.3",
    "vite": "^5.4.0",
    "vitest": "1.3.1",
    "wrangler": "^4.59.2",
    "concurrently": "^9.0.1",
    "miniflare": "^3.20250124.0",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run fmt:check && npm run check:migration-edits",
    "pre-push": "npm run verify && npm run check:remote-migrations"
  }
}
