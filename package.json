{
  "name": "msgstats",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20 <24"
  },
  "scripts": {
    "dev": "DOTENV_CONFIG_PATH=.env.dev tsx server/index.ts",
    "migrate": "DOTENV_CONFIG_PATH=.env.dev tsx server/scripts/migrate.ts",
    "build": "vite build && vite build --ssr src/entry-server.tsx",
    "start": "node dist/server/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --check .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "verify": "npm run lint && npm run format && npm run typecheck && npm run test"
  },
  "dependencies": {
    "@stylexjs/stylex": "0.6.1",
    "better-sqlite3": "9.4.5",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.30.10",
    "express": "4.18.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.22.3"
  },
  "devDependencies": {
    "@stylexjs/babel-plugin": "0.6.1",
    "@stylexjs/rollup-plugin": "0.6.1",
    "@types/express": "4.17.21",
    "@types/better-sqlite3": "7.6.10",
    "@types/node": "20.11.30",
    "@types/react": "18.2.64",
    "@types/react-dom": "18.2.21",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "@vitejs/plugin-react": "4.2.1",
    "drizzle-kit": "0.21.4",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.34.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "node-mocks-http": "1.14.1",
    "prettier": "3.2.5",
    "tsx": "4.7.1",
    "typescript": "5.3.3",
    "vite": "5.1.6",
    "vitest": "1.3.1"
  }
}
