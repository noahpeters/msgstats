{
  "name": "msgstats",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.13.0 <25"
  },
  "packageManager": "npm@11.8.0",
  "scripts": {
    "predev": "react-router build",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" \"npm run dev:build\" \"npm run dev:ws\"",
    "dev:api": "wrangler dev --config wrangler.api.toml --port 8787 --ip 127.0.0.1 --inspector-port 9231 --inspector-ip 127.0.0.1",
    "dev:web": "node scripts/wait-for-paths.mjs && wrangler dev --config wrangler.web.toml --port 5173 --ip 127.0.0.1 --inspector-port 9230 --inspector-ip 127.0.0.1",
    "dev:build": "node --watch-path=src --watch-path=react-router.config.ts scripts/dev-build.mjs",
    "dev:ws": "node dev/ws-server.mjs",
    "build": "react-router build",
    "preview": "react-router preview",
    "deploy:web": "npm run verify && react-router build && wrangler deploy --config wrangler.web.toml",
    "deploy:api": "npm run verify && wrangler deploy --config wrangler.api.toml",
    "deploy:web:staging": "npm run verify && react-router build && wrangler deploy --config wrangler.web.toml --env staging",
    "deploy:api:staging": "npm run verify && wrangler deploy --config wrangler.api.toml --env staging",
    "db:migrations:local": "wrangler d1 migrations apply DB --local --config wrangler.api.toml",
    "db:migrations:remote": "wrangler d1 migrations apply DB --env production --remote --config wrangler.api.toml",
    "db:migrations:staging": "wrangler d1 migrations apply DB --env staging --remote --config wrangler.api.toml",
    "fmt:check": "npm run format",
    "check:migration-edits": "node scripts/check-migration-edits.mjs",
    "check:remote-migrations": "node scripts/check-remote-migrations.mjs --env production",
    "check:remote-migrations:staging": "node scripts/check-remote-migrations.mjs --env staging",
    "check:remote-migrations:prod": "node scripts/check-remote-migrations.mjs --env production",
    "check:staging-migrations": "node scripts/check-staging-migrations.mjs",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --check .",
    "format:write": "prettier \"**/*.{ts,js,json,md,mjs,tsx,cjs}\" --write",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "verify": "npm run lint && npm run format && npm run typecheck && npm run test",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@react-router/cloudflare": "^7.0.0",
    "@react-router/node": "^7.0.0",
    "@stylexjs/stylex": "^0.7.0",
    "d3": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.0.0",
    "react-router-dom": "^7.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240320.0",
    "@react-router/dev": "^7.0.0",
    "@stylexjs/unplugin": "^0.17.5",
    "@types/node": "20.11.30",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "concurrently": "^9.0.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.34.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "miniflare": "^3.20250124.0",
    "prettier": "3.2.5",
    "simple-git-hooks": "^2.11.1",
    "typescript": "5.3.3",
    "vite": "^5.4.0",
    "vitest": "1.3.1",
    "wrangler": "^4.61.1",
    "ws": "^8.18.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run fmt:check && npm run check:migration-edits",
    "pre-push": "node scripts/pre-push.mjs"
  }
}
